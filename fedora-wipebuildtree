#!/bin/sh
#
# fedora-wipebuildtree
# Erases all files within ~/redhat
#
# Author:  Warren Togami <warren@togami.com>
# License: GPL
# $Id: fedora-wipebuildtree,v 1.3 2003/10/31 18:54:46 scop Exp $

for builddir in redhat rpmbuild; do

    if [ ! -d ~/$builddir ]; then
        echo "~/$builddir does not exist, unable to wipe clean."
    else
        echo "Removing all files from ~/$builddir/..."
        rm -rf ~/$builddir/BUILD/*
        rm -rf ~/$builddir/SOURCES/*
        rm -rf ~/$builddir/SRPMS/*
        rm -rf ~/$builddir/SPECS/*
        rm -f $(find ~/$builddir -name "*.rpm")
    fi

done
